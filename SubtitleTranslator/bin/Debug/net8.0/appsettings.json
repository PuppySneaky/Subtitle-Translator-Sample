{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SubtitleTranslator": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 52428800,
      "MaxRequestHeadersTotalSize": 65536,
      "MaxRequestHeaderCount": 200,
      "MaxRequestBufferSize": 2097152,
      "MaxRequestLineSize": 16384,
      "KeepAliveTimeout": "00:10:00",
      "RequestHeadersTimeout": "00:05:00"
    }
  },
  "Translation": {
    "GoogleTranslate": {
      "ApiKey": "",
      "BaseUrl": "https://translate.googleapis.com/translate_a/single",
      "MaxCharacters": 1500,
      "RequestDelayMs": 300
    }
  },
  "FileUpload": {
    "MaxFileSizeBytes": 20971520,
    "AllowedExtensions": [ ".srt", ".vtt", ".ass", ".ssa", ".sub" ],
    "UploadPath": "wwwroot/uploads",
    "TempPath": "wwwroot/temp",
    "CleanupIntervalHours": 24
  },
  "Subtitle": {
    "DefaultSourceLanguage": "auto",
    "DefaultTargetLanguage": "en",
    "MaxSubtitleLines": 50000,
    "MaxLineLength": 1000
  }
}